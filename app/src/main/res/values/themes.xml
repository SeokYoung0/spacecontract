<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spacecontract" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_color</item>
        <item name="colorPrimaryVariant">@color/space_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/nearwhite</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SpaceRipple">
        <item name="colorControlHighlight">@color/space_color</item>
    </style>

    <!--  네이버 나눔고딕볼드체를 적용 -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/naumgothicbold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/naumgothicbold</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/naumgothicbold</item>
    </style>

   <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
       <item name="fontFamily">@font/naumgothicbold</item>
   </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">@font/naumgothicbold</item>
    </style>

    <style name="InputEditTextStyle" parent="Widget.MaterialComponents.TimePicker.Display.TextInputEditText">
        <item name="fontFamily">@font/naumgothicbold</item>
    </style>
</resources>