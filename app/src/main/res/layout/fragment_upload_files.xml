<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="공정표, 하자이행보증권 등 \n기타 서류 파일을 선택 해주세요!"
                android:textSize="24dp"
                android:layout_margin="24dp"
                android:layout_gravity="center">
            </TextView>

            <LinearLayout
                android:id="@+id/upload_file_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/upload_file_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="공정표, 하자이행보증권 등..."
                    android:focusable="false"
                    android:clickable="false"
                    android:ems="10"
                    android:layout_weight="9">
                </EditText>
                <Button
                    android:id="@+id/upload_file_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파일 첨부 "
                    android:layout_weight="1"></Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/upload_file_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/upload_file_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="공정표, 하자이행보증권 등..."
                    android:focusable="false"
                    android:clickable="false"
                    android:ems="10"
                    android:layout_weight="9">
                </EditText>
                <Button
                    android:id="@+id/upload_file_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파일 첨부 "
                    android:layout_weight="1"></Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/upload_file_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/upload_file_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="공정표, 하자이행보증권 등..."
                    android:focusable="false"
                    android:clickable="false"
                    android:ems="10"
                    android:layout_weight="9">
                </EditText>
                <Button
                    android:id="@+id/upload_file_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파일 첨부 "
                    android:layout_weight="1"></Button>
            </LinearLayout>

            <Button
                android:id="@+id/upload_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장하기"
                android:layout_margin="4dp"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>